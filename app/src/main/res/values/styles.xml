<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.ToolBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="dialogWindowAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_view_in_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_view_out_anim</item>
    </style>

</resources>
